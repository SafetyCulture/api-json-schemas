// Add our overrides as necessary
{
  "env": {
    "node": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "rules": {
    "max-len": [2, 120, 2],  // Maximum line length, airbnb defaults to 100: [severity, max char count, tabWidth]
    "comma-dangle": [2, "never"], // airbnb defaults to always require dangling commas. DO NOT WANT
    "arrow-body-style": 0,
    "arrow-parens": 0,
    "no-underscore-dangle": 0,
    "object-curly-spacing": 0, // The default WebStorm is without spaces around curlies. SC code is like that in general.
    "new-cap": 0, // Some factory functions can be capital cased.
    "no-param-reassign": 0
  }
}
