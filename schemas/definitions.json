{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://api.safetyculture.io/schemas/definitions.json",
  "template_id": {
    "title": "The template unique identifier",
    "description": "",
    "type": "string",
    "pattern": "^template_[a-zA-Z0-9]+$"
  },
  "audit_id": {
    "title": "The audit unique identifier",
    "description": "",
    "type": "string",
    "pattern": "^audit_[a-zA-Z0-9]+$"
  },
  "template_audit_item": {
    "description": "Audit item",
    "properties": {
      "action_item_profile_id": {
        "type": [
          "string",
          "null"
        ]
      },
      "item_id": {
        "type": "string",
        "description": "Unique id of the item"
      },
      "label": {
        "type": "string",
        "description": "Item name for display"
      },
      "type": {
        "type": "string",
        "anyOf": [
          {
            "enum": [
              "information",
              "smartfield",
              "checkbox",
              "media",
              "textsingle",
              "element",
              "primeelement",
              "dynamicfield",
              "category",
              "section",
              "text",
              "signature",
              "switch",
              "slider",
              "drawing",
              "address",
              "list",
              "question",
              "datetime",
              "weather",
              "asset",
              "scanner"
            ]
          }
        ]
      },
      "parent_id": {
        "type": "string"
      },
      "options": {
        "type": [
          "object",
          "null"
        ],
        "properties": {
          "assets": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "computed_field": {
            "type": "string"
          },
          "condition": {
            "type": "string"
          },
          "element": {
            "type": "string"
          },
          "enable_date": {
            "type": "boolean",
            "description": "Toggles the date portion of an item containing a datetime"
          },
          "enable_signature_timestamp": {
            "type": "boolean",
            "description": "Toggles the timestamp set when filling in a signature field"
          },
          "enable_time": {
            "type": "boolean",
            "description": "Toggles the time portion of an item containing a datetime"
          },
          "failed_responses": {
            "type": "array",
            "description": "Selections of the current response set that determine failure",
            "items": {
              "type": "string"
            }
          },
          "notification": {
            "type": "object",
            "required": [
              "responses",
              "response_set"
            ],
            "description": "Selections of the current response set that trigger notifications",
            "properties": {
              "responses": {
                "type": "array",
                "description": "Responses that trigger notifications.",
                "items": {
                  "$ref": "#/notification-response"
                },
                "minItems": 1,
                "uniqueItems": true
              },
              "response_set": {
                "type": "string"
              }
            }
          },
          "hide_barcode": {
            "type": "boolean"
          },
          "increment": {
            "type": "number",
            "description": "Controls the increment jumps in slider items"
          },
          "is_mandatory": {
            "type": "boolean",
            "description": "Toggles whether the item has to have a response before the audit can be completed"
          },
          "label": {
            "type": "string"
          },
          "link": {
            "type": "string",
            "description": "URL field in information items"
          },
          "locked": {
            "type": "boolean",
            "description": "Toggles whether an asset item has been locked"
          },
          "max": {
            "type": "number",
            "description": "Maximum value for a slider item"
          },
          "media": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "$ref": "#/media_item"
              }
            ],
            "description": "ID of attached media"
          },
          "media_visible_in_report": {
            "type": "boolean"
          },
          "min": {
            "type": "number",
            "description": "Minimum value for a slider item"
          },
          "multi_selection": {
            "type": "boolean"
          },
          "multiple_selection": {
            "type": "boolean"
          },
          "required": {
            "type": "boolean"
          },
          "response_set": {
            "type": "string"
          },
          "secure": {
            "type": "boolean"
          },
          "type": {
            "type": "string",
            "description": "The type of an information field. Currently text, media or link"
          },
          "url": {
            "type": "string",
            "description": "*DEPRECATED - use link* URL field in information items"
          },
          "values": {
            "type": "array",
            "description": "The item's response",
            "items": {
              "type": "string"
            }
          },
          "visible_in_audit": {
            "type": "boolean"
          },
          "visible_in_report": {
            "type": "boolean"
          },
          "weighting": {
            "type": "integer",
            "description": "The weight used for generating audit scores"
          }
        }
      }
    }
  },
  "media_item": {
    "type": "object",
    "required": [
      "date_created",
      "file_ext",
      "media_id"
    ],
    "properties": {
      "date_created": {
        "type": "string",
        "format": "date-time"
      },
      "file_ext": {
        "type": "string"
      },
      "media_id": {
        "type": "string"
      },
      "item_id": {
        "type": "string"
      },
      "template_id": {
        "type": "string"
      },
      "label": {
        "type": "string"
      }
    }
  },
  "response_sets": {
    "type": "object",
    "description": "The response sets for question and list items in the template",
    "uniqueItems": true,
    "patternProperties": {
      ".*": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "responses": {
            "type": "array",
            "items": {
              "$ref": "#/response_set_response"
            }
          }
        }
      }
    }
  },
  "response_set_response": {
    "type": "object",
    "properties": {
      "colour": {
        "type": "string",
        "pattern": "^\\d{1,3},\\d{1,3},\\d{1,3}$"
      },
      "enable_score": {
        "type": "boolean"
      },
      "id": {
        "type": "string"
      },
      "image": {
        "type": [
          "string",
          "null"
        ]
      },
      "label": {
        "type": "string"
      },
      "score": {
        "type": "number"
      },
      "short_label": {
        "type": "string"
      }
    }
  },
  "weather_response": {
    "type": "object",
    "properties": {
      "country": {
        "type": "string"
      },
      "oneOf": [
        {
          "datetime": {
            "type": "string",
            "format": "date-time"
          }
        },
        {
          "weather_time": {
            "type": "string"
          },
          "weather_date": {
            "type": "string"
          }
        }
      ],
      "geometry": {
        "$ref": "geometry.json#"
      },
      "humidity": {
        "type": "string",
        "pattern": "^[0-9]+%$"
      },
      "name": {
        "type": "string"
      },
      "temperature": {
        "type": "string"
      },
      "weather_conditions": {
        "type": "string"
      },
      "weather_id": {
        "type": "integer"
      },
      "wind": {
        "type": "string"
      }
    }
  }
}
